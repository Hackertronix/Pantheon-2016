<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5fcf80">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet The Team"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:id="@+id/header_text_view"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"

            android:id="@+id/desc_card_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/me_header"
                    android:textColor="#000000"
                    android:textSize="15sp"

                    android:text="Designed and Developed by"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/phoenix_pic"
                    android:layout_below="@+id/me_header"
                    android:src="@drawable/phoenix"
                    android:padding="7dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/me_name"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:text="Prateek Phoenix"
                    android:layout_below="@+id/me_header"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="7dp"
                    android:layout_toRightOf="@+id/phoenix_pic"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear"
                    android:orientation="horizontal"
                    android:layout_below="@+id/me_name"
                    android:layout_toRightOf="@+id/phoenix_pic"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="7dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:id="@+id/me_mail"
                        android:src="@drawable/ic_email_black_24dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="64dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:id="@+id/me_twitter"
                        android:src="@drawable/twitter"/>


                </LinearLayout>




            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/desc_card_view"

            android:id="@+id/desc_card_view2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/krupa_header"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="UX Optimisation by"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/krupa_pic"
                    android:layout_below="@+id/krupa_header"
                    android:src="@drawable/krupa"
                    android:padding="7dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/krupa_name"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:text="Krupa Hebbar"
                    android:layout_below="@+id/krupa_header"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="7dp"
                    android:layout_toRightOf="@+id/krupa_pic"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/krupa_name"
                    android:layout_toRightOf="@+id/krupa_pic"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="7dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:id="@+id/krupa_email"
                        android:src="@drawable/ic_email_black_24dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="64dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:id="@+id/krupa_twiiter"
                        android:src="@drawable/twitter"/>


                </LinearLayout>




            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:id="@+id/gitimage"
        android:src="@drawable/res"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:elevation="8dp"/>

</RelativeLayout>